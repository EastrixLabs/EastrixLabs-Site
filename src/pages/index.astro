const testimonialColumns = [0, 1, 2].map((columnIndex) =>
  testimonials.filter(
    (_, testimonialIndex) => testimonialIndex % 3 === columnIndex,
  ),
);

const contentSectionClass = "mt-[clamp(2.7rem,7vw,5.2rem)] scroll-mt-[7.5rem]";
const navLinkClass =
  "inline-flex min-h-[2.7rem] w-full items-center justify-start rounded-[0.78rem] px-[0.66rem] py-[0.42rem] text-[0.87rem] font-semibold text-[#56646f] no-underline transition-[color,background-color] duration-[180ms] ease-in-out hover:bg-[#ffffffbd] hover:text-[#1a232b] min-[861px]:min-h-11 min-[861px]:w-auto min-[861px]:justify-center min-[861px]:rounded-full min-[861px]:px-[0.7rem] min-[861px]:py-[0.4rem]";
const testimonialColumnClass =
  "relative h-[22rem] overflow-hidden rounded-2xl border border-[#202d3830] bg-[#fffef8] before:pointer-events-none before:absolute before:inset-x-0 before:top-0 before:z-[1] before:h-[52px] before:bg-[linear-gradient(to_bottom,#fffef8,#fffef800)] before:content-[''] after:pointer-events-none after:absolute after:inset-x-0 after:bottom-0 after:z-[1] after:h-[52px] after:bg-[linear-gradient(to_top,#fffef8,#fffef800)] after:content-[''] max-[860px]:h-[18.5rem] max-[620px]:h-auto";
---

<MainLayout
  title="Eastrix Labs | SaaS Product Studio"
  description="Eastrix Labs builds ambitious SaaS products with strategy, design, engineering, and growth execution."
>
  <a
    class="fixed left-4 top-24 z-30 rounded-full bg-[#1a232b] px-4 py-[0.62rem] text-[0.86rem] text-white no-underline transition-[top] duration-220 ease-in-out focus-visible:top-4"
    href="#main-content"
  >
    Skip to Main Content
  </a>
  <div class="mx-auto max-w-7xl p-[clamp(0.9rem,2.2vw,2rem)]">
    <header
      class="site-header group sticky top-4 z-20 grid grid-cols-[1fr_auto] items-center gap-[0.8rem] rounded-[1.1rem] border border-[#202d3830] bg-[#fffdf6e0] px-[0.88rem] py-[0.72rem] backdrop-blur-[10px] min-[861px]:grid-cols-[auto_1fr_auto]"
      id="top"
      data-open="false"
    >
      <a
        class="inline-flex min-w-fit items-center gap-[0.65rem] text-inherit no-underline"
        href="#top"
        aria-label="Eastrix Labs Home"
      >
        <span
          class="grid h-[2.05rem] w-[2.05rem] place-items-center rounded-[0.62rem] border border-[#1a232b2a] bg-[linear-gradient(125deg,#1a232b_0%,#374a5a_100%)] font-['Syne','Segoe_UI',sans-serif] text-[0.8rem] font-bold tracking-widest text-white"
          aria-hidden="true"
        >
          EL
        </span>
        <span
          class="font-['Syne','Segoe_UI',sans-serif] text-[0.98rem] font-bold tracking-[0.02em] min-[621px]:text-[1.08rem]"
        >
          Eastrix Labs
        </span>
      </a>

      <nav
        class="site-nav col-span-full mt-[0.12rem] hidden flex-col items-stretch gap-[0.35rem] border-t border-[#1a232b20] pt-[0.72rem] group-data-[open=true]:flex min-[861px]:col-auto min-[861px]:mt-0 min-[861px]:inline-flex min-[861px]:flex-row min-[861px]:items-center min-[861px]:justify-center min-[861px]:gap-[clamp(0.2rem,0.85vw,0.86rem)] min-[861px]:border-t-0 min-[861px]:p-0"
        id="site-navigation"
        aria-label="Primary"
      >
        <a class={navLinkClass} href="#projects">Projects</a>
        <a class={navLinkClass} href="#services">Our Services</a>
        <a class={navLinkClass} href="#partners">Our Partners</a>
        <a class={navLinkClass} href="#team">Meet The Team</a>
        <a class={navLinkClass} href="#contact">Contact Us</a>
        <CtaLink
          href="#contact"
          label="Book A Demo"
          icon={ArrowRight}
          className="mt-[0.2rem] min-[861px]:hidden"
        />
      </nav>

      <div class="inline-flex items-center gap-[0.45rem]">
        <CtaLink
          href="#contact"
          label="Book A Demo"
          icon={ArrowRight}
          className="hidden min-[861px]:inline-flex"
        />
        <button
          class="menu-toggle inline-flex h-11 w-11 items-center justify-center rounded-[0.8rem] border border-[#1a232b2f] bg-[#fffdf6] text-[#1a232b] min-[861px]:hidden"
          type="button"
          aria-expanded="false"
          aria-controls="site-navigation"
          aria-label="Toggle menu"
        >
          <Menu
            className="hidden group-data-[open=false]:inline-flex"
            size={18}
            aria-hidden="true"
            focusable="false"
          />
          <ChevronDown
            className="hidden group-data-[open=true]:inline-flex"
            size={18}
            aria-hidden="true"
            focusable="false"
          />
          <span class="sr-only">Toggle menu</span>
        </button>
      </div>
    </header>

    <main id="main-content">
      <section
        class="relative mt-[clamp(1rem,2.5vw,1.6rem)] flex items-center overflow-hidden rounded-[clamp(1.2rem,2.3vw,2rem)] border border-[#202d3830] bg-[linear-gradient(168deg,#fffef9_0%,#f6efe2_52%,#ece8dd_100%)] p-[clamp(1.06rem,4vw,2.65rem)] before:pointer-events-none before:absolute before:inset-0 before:bg-[linear-gradient(#ffffff8f_1px,transparent_1px),linear-gradient(90deg,#ffffff8f_1px,transparent_1px)] before:bg-size-[56px_56px] before:opacity-40 before:content-['']"
      >
        <div
          class="pointer-events-none absolute right-9 top-18 h-[clamp(180px,25vw,320px)] w-[clamp(180px,25vw,320px)] rounded-full bg-[radial-gradient(circle,#ffb77f_0%,#ffb77f00_68%)] blur-[14px] animate-[float-orb_8s_ease-in-out_infinite]"
          aria-hidden="true"
        >
        </div>
        <div
          class="pointer-events-none absolute -bottom-20 left-11 h-[clamp(140px,22vw,260px)] w-[clamp(140px,22vw,260px)] rounded-full bg-[radial-gradient(circle,#7ec8c2_0%,#7ec8c200_64%)] blur-[14px] animate-[float-orb_8s_ease-in-out_infinite] [animation-delay:1.2s]"
          aria-hidden="true"
        >
        </div>
        <div
          class="relative z-1 grid w-full gap-[clamp(1.1rem,2.8vw,2rem)] min-[980px]:grid-cols-[minmax(0,1.32fr)_minmax(300px,0.68fr)] min-[980px]:items-center"
        >
          <div class="min-w-0">
            <p
              class="reveal reveal--1 m-0 inline-flex w-fit items-center gap-[0.46rem] rounded-full border border-[#2033411f] bg-[#fff8ec] px-[0.74rem] py-[0.42rem] text-[0.8rem] font-semibold text-[#284354]"
            >
              <Sparkles size={16} aria-hidden="true" focusable="false" />
              <span>Purpose-built for category-defining SaaS products</span>
            </p>
            <h1
              class="reveal reveal--2 mt-[0.95rem] max-w-[15ch] font-['Syne','Segoe_UI',sans-serif] text-[2.35rem] leading-[0.95] tracking-[-0.03em] text-balance min-[621px]:text-[3.2rem] min-[861px]:text-[4.15rem] min-[980px]:text-[4.65rem]"
            >
              Raising SaaS from the East
            </h1>
            <p
              class="reveal reveal--3 mt-[0.95rem] max-w-[58ch] text-[1.06rem] text-[#56646f] text-pretty"
            >
              Eastrix Labs helps founders and operators turn SaaS concepts into
              durable products with focused execution, clean architecture, and
              measurable growth momentum.
            </p>
            <ul
              class="reveal reveal--4 mt-[1.2rem] grid max-w-[58ch] list-none gap-[0.58rem] p-0"
              aria-label="How Eastrix Labs operates"
            >
              {
                heroPillars.map((pillar) => {
                  const PillarIcon = pillar.icon;
                  return (
                    <li class="inline-flex min-h-[2.68rem] items-center gap-[0.45rem] rounded-full border border-[#1a232b2a] bg-[#fffef8] px-[0.74rem] py-[0.35rem] text-[0.87rem] font-semibold text-[#2f4350]">
                      <PillarIcon
                        size={15}
                        aria-hidden="true"
                        focusable="false"
                      />
                      <span>{pillar.label}</span>
                    </li>
                  );
                })
              }
            </ul>
            <div
              class="reveal reveal--5 mt-5 flex flex-wrap items-center gap-[0.72rem]"
            >
              <CtaLink href="#contact" label="Book A Demo" icon={ArrowRight} />
              <CtaLink
                href="#services"
                label="See Our Process"
                variant="ghost"
                icon={Rocket}
              />
            </div>
          </div>

          <aside
            class="reveal reveal--6 self-center rounded-2xl border border-[#1a232b22] bg-[#fffef8cc] p-3 min-[621px]:p-[0.9rem]"
            aria-label="Delivery approach"
          >
            <p
              class="m-0 text-[0.78rem] font-bold uppercase tracking-[0.09em] text-[#00726f]"
            >
              Delivery Engine
            </p>
            <h2
              class="mt-[0.55rem] font-['Syne','Segoe_UI',sans-serif] text-[1.26rem] leading-[1.14] tracking-[-0.01em] text-balance"
            >
              Focused execution from concept to scalable launch.
            </h2>
            <ol class="mt-[0.95rem] grid list-none gap-[0.6rem] p-0">
              {
                journeySteps.map((step) => {
                  const StepIcon = step.icon;
                  return (
                    <li class="rounded-[0.82rem] border border-[#1a232b1f] bg-[#ffffffd6] p-[0.62rem]">
                      <div class="grid grid-cols-[auto_1fr] items-start gap-[0.48rem]">
                        <span
                          class="inline-grid h-7 w-7 place-items-center rounded-[0.56rem] border border-[#1a232b22] bg-[#f3fbfa] text-[#204a60]"
                          aria-hidden="true"
                        >
                          <StepIcon
                            size={15}
                            aria-hidden="true"
                            focusable="false"
                          />
                        </span>
                        <div>
                          <h3 class="m-0 font-['Syne','Segoe_UI',sans-serif] text-[0.95rem] leading-[1.2]">
                            {step.title}
                          </h3>
                          <p class="mt-[0.26rem] text-[0.83rem] text-[#56646f]">
                            {step.detail}
                          </p>
                        </div>
                      </div>
                    </li>
                  );
                })
              }
            </ol>
            <p
              class="mt-[0.9rem] rounded-[0.78rem] border border-[#1a232b22] bg-[#fffef9] px-[0.72rem] py-[0.6rem] text-[0.82rem] font-semibold text-[#2e4755]"
            >
              26 launches · 94% on-time milestones · $48M+ ARR supported
            </p>
          </aside>
        </div>
      </section>

      <section id="projects" class={contentSectionClass}>
        <SectionHeader
          eyebrow="Projects"
          title="Products That Prove Business Value"
          description="Each platform ships with clear conversion goals and a roadmap tied to revenue and retention outcomes."
        />
        <div
          class="mt-6 grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-12 xl:auto-rows-fr xl:grid-flow-dense"
        >
          {projects.map((project) => <ProjectBentoCard {...project} />)}
        </div>
      </section>

      <section id="services" class={contentSectionClass}>
        <SectionHeader
          eyebrow="Our Services"
          title="A Structured SaaS Delivery System"
          description="Services run as phases with explicit deliverables so teams always know what is shipping and why it matters."
        />
        <div class="mt-[1.4rem] grid gap-[0.82rem]">
          {
            services.map((service, index) => (
              <ServiceStrip {...service} index={index + 1} />
            ))
          }
        </div>
      </section>

      <section id="partners" class={`relative ${contentSectionClass}`}>
        <SectionHeader
          align="center"
          eyebrow="Our Partners"
          title="Partners and Sponsors Supporting Every Launch"
          description="Cross-functional collaboration with specialist firms keeps execution speed high while preserving delivery quality."
        />

        <div class="mt-6 grid gap-3">
          <p
            class="m-0 text-xs font-bold uppercase tracking-[0.08em] text-[#36576a]"
          >
            Partners
          </p>
          <div
            class="relative overflow-hidden rounded-2xl border border-[#202d3830] bg-[#f6f1e4] py-2"
            aria-label="Partner organizations"
          >
            <div
              class="pointer-events-none absolute inset-y-0 left-0 z-10 w-16 bg-linear-to-l from-[#f6f1e4] to-transparent"
            >
            </div>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 z-10 w-16 bg-linear-to-l from-[#f6f1e4] to-transparent"
            >
            </div>
            <ul
              class="animate-marquee-left flex w-max min-w-full items-center gap-3 px-3"
            >
              {
                [...partners, ...partners].map((partner, index) => (
                  <li
                    class="m-0 inline-flex min-h-[2.2rem] items-center gap-1.5 whitespace-nowrap rounded-full border border-[#1a232b22] bg-[#fffef9] px-3 py-1.5 text-[0.83rem] text-[#24323e]"
                    aria-hidden={index >= partners.length}
                  >
                    <Handshake size={15} aria-hidden="true" focusable="false" />
                    <span>{partner}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <p
            class="m-0 text-xs font-bold uppercase tracking-[0.08em] text-[#36576a]"
          >
            Sponsors
          </p>
          <div
            class="relative overflow-hidden rounded-2xl border border-[#202d3830] bg-[#f6f1e4] py-2"
            aria-label="Sponsor organizations"
          >
            <div
              class="pointer-events-none absolute inset-y-0 left-0 z-10 w-16 bg-linear-to-l from-[#f6f1e4] to-transparent"
            >
            </div>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 z-10 w-16 bg-linear-to-l from-[#f6f1e4] to-transparent"
            >
            </div>
            <ul
              class="animate-marquee-right flex w-max min-w-full items-center gap-3 px-3"
            >
              {
                [...sponsors, ...sponsors].map((sponsor, index) => (
                  <li
                    class="m-0 inline-flex min-h-[2.2rem] items-center gap-1.5 whitespace-nowrap rounded-full border border-[#1a232b22] bg-[#fffef9] px-3 py-1.5 text-[0.83rem] text-[#24323e]"
                    aria-hidden={index >= sponsors.length}
                  >
                    <Handshake size={15} aria-hidden="true" focusable="false" />
                    <span>{sponsor}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="mt-[1.05rem]">
          <p
            class="m-0 text-xs font-bold uppercase tracking-[0.08em] text-[#36576a]"
          >
            Testimonials
          </p>
          <div
            class="mt-[0.52rem] grid gap-[0.7rem] grid-cols-3 max-[1040px]:grid-cols-2 max-[860px]:grid-cols-1"
            aria-label="Client testimonials"
          >
            {
              testimonialColumns.map((column, index) => {
