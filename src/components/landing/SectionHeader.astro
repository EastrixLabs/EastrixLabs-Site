---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { eyebrow, title, description, align = 'left' } = Astro.props;
const alignmentClass = align === 'center' ? 'mx-auto text-center' : '';
---

<header class={`max-w-3xl ${alignmentClass}`}>
  {eyebrow && <p class="m-0 text-xs font-semibold uppercase tracking-wider text-teal-700">{eyebrow}</p>}
  <h2 class="mt-2 text-3xl font-semibold leading-tight text-balance text-slate-900 sm:text-4xl">
    {title}
  </h2>
  {description && <p class="mt-3 text-base text-slate-600 text-pretty">{description}</p>}
</header>
