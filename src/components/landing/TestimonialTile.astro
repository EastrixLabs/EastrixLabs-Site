---
interface Props {
  quote: string;
  author: string;
  role: string;
  ariaHidden?: boolean;
}

const { quote, author, role, ariaHidden = false } = Astro.props;
---

<article
  class="rounded-xl border border-[#1a232b21] bg-white p-3"
  aria-hidden={ariaHidden}
>
  <p class="m-0 text-[0.88rem] text-[#455965]">&quot;{quote}&quot;</p>
  <footer class="mt-2 grid gap-0.5">
    <strong class="font-['Syne','Segoe_UI',sans-serif] text-[0.95rem] leading-[1.1]">{author}</strong>
    <span class="text-[0.78rem] text-[#536875]">{role}</span>
  </footer>
</article>
