---
interface Props {
  quote: string;
  author: string;
  role: string;
  ariaHidden?: boolean;
}

const { quote, author, role, ariaHidden = false } = Astro.props;
---

<article
  class="rounded-xl border border-slate-200 bg-white p-3"
  aria-hidden={ariaHidden}
>
  <p class="m-0 text-sm text-slate-600">&quot;{quote}&quot;</p>
  <footer class="mt-2 grid gap-1">
    <strong class="text-base font-semibold leading-tight text-slate-900">{author}</strong>
    <span class="text-xs text-slate-500">{role}</span>
  </footer>
</article>
