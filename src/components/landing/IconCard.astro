---
import type { LucideIcon } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  icon: LucideIcon;
  meta?: string;
}

const { title, description, icon: Icon, meta } = Astro.props;
---

<article class="icon-card reveal-card">
  <div class="icon-card__icon-wrap" aria-hidden="true">
    <Icon size={20} strokeWidth={1.9} aria-hidden="true" focusable="false" />
  </div>
  <h3 class="icon-card__title">{title}</h3>
  {meta && <p class="icon-card__meta">{meta}</p>}
  <p class="icon-card__description">{description}</p>
</article>
